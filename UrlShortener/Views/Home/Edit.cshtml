@model UrlShortener.Application.CQRS.Commands.UpdateURLCommand

@{
    ViewData["Title"] = "Edit Short URL";
}

<h1>Edit Short URL</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="UrlDto.Id" />

    <div class="form-group">
        <label asp-for="UrlDto.OriginalURL" class="control-label">Original URL</label>
        <input asp-for="UrlDto.OriginalURL" class="form-control" />
        <span asp-validation-for="UrlDto.OriginalURL" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UrlDto.ShortURL" class="control-label">Short URL</label>
        <input asp-for="UrlDto.ShortURL" class="form-control" readonly />
        <span asp-validation-for="UrlDto.ShortURL" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UrlDto.CreatedAt" class="control-label">Created At</label>
        <input asp-for="UrlDto.CreatedAt" class="form-control" type="datetime-local" readonly />
        <span asp-validation-for="UrlDto.CreatedAt" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UrlDto.ClickCount" class="control-label">Click Count</label>
        <input asp-for="UrlDto.ClickCount" class="form-control" type="number" />
        <span asp-validation-for="UrlDto.ClickCount" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}